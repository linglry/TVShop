<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingLeft="10dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_icon"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="3dp"
        android:background="#ffffff"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/img_icon"
        android:layout_marginRight="10dp"
        android:lines="2"
        android:ellipsize="end"
        android:text="AKG K450 头戴式耳机头戴式耳机头戴式耳机头戴式耳机头戴式耳机头戴式耳机" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_percent"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_below="@id/tv_title"
        android:layout_marginBottom="4dp"
        android:text="￥389.00"
        android:textColor="@color/red" />



    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_icon"
        android:layout_alignLeft="@+id/tv_price"
        android:layout_below="@id/tv_price"
        android:text="10"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/micro_text_size" />

    <View
        android:layout_height="@dimen/divider_height_middle"
        android:layout_width="match_parent"
        android:layout_below="@+id/img_icon"
        android:layout_marginTop="8dp"
        android:background="#f9f9f9"/>

</RelativeLayout>