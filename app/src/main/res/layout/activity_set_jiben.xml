<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_jiben"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.tvshop.activity.SetBasicActivity">

    <RelativeLayout
        android:id="@+id/layout_login_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        android:background="@drawable/drawable_topbar_bg">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:src="@drawable/flight_title_back_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="基本设置"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_tel_set"
        style="@style/MineItemStyle"
        android:background="#fff" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="电话"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/small_medium_text_size" />

        <EditText
            android:id="@+id/et_tel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9f9f9"
        />

    <LinearLayout
        android:id="@+id/layout_name_set"
        style="@style/MineItemStyle"
        android:background="#fff" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="昵称"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/small_medium_text_size" />

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9f9f9"
        />

    <LinearLayout
        android:id="@+id/layout_sex_set"
        style="@style/MineItemStyle"
        android:background="#fff" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="性别"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/small_medium_text_size" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbWoman"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"/>
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:textSize="18sp"
        android:text="确认保存"/>

</LinearLayout>
