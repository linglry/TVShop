<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:drawable="@drawable/load_circle"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">
    <!--
    rotate 旋转
    pivotX 缩放起始X轴坐标
    pivotY 缩放起始Y轴坐标
    fromDegrees 旋转开始角度
    toDegrees 旋转结束角度
    -->

</rotate>